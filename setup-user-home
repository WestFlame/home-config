#!/bin/sh

create_directories () {
    DIRS="workspace
    local
    programs
    sources"

    for DIR in $DIRS; do
        if [ ! -d "$DIR" ]; then
            mkdir "$DIR"
        fi
    done
}

create_symlinks () {
    ln -s ~/.repos/home-config/update-git-repos ~/.repos/update-git-repos
    ln -s ~/.repos/home-config/gitconfig .gitconfig
    ln -s ~/.repos/home-config/tmux.conf .tmux.conf
    ln -s ~/.repos/home-config/tmuxp .tmuxp
    ln -s ~/.repos/zsh-antigen/zshrc .zshrc
    ln -s ~/.repos/zsh-antigen/zshenv .zshenv
}

install_packages () {
    sudo apt-get install aptitude
    sudo aptitude install zsh tmux
    sudo aptitude install build-essential git tig cmake cmake-curses-gui
    sudo aptitude install python3 python3-pip python3-numpy

    sudo aptitude install libyaml-dev
    sudo pip3 install tmuxp
    exit
}

cd ~/.repos
git clone --recursive git@github.com:WestFlame/zsh-antigen.git
git clone git@github.com:powerline/fonts powerline-fonts
git clone git@github.com:altercation/solarized
git clone git@github.com:Anthony25/gnome-terminal-colors-solarized.git
git clone git@github.com:jkaving/intellij-colors-solarized.git

cd powerline-fonts; ./install.sh; cd ..

cd ~
create_directories
create_symlinks

install_packages
